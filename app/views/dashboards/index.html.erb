<div class="container">

   <div class="row">

    <div class="col-12 text-left mt-3">
      <h3><b>Listes</b></h3>
    </div>

    <div class="col-6 p-0" style="cursor:pointer;" data-bs-toggle="modal" data-bs-target="#listModal">
      <div class="list-card-dashboard" >
        <div>Ajouter<br>une liste</div>
        <i class="fa-solid fa-circle-plus color"></i>
      </div>
    </div>
    <% @last_lists.each do |list| %>
      <%=render "list_card", list: list  %>
    <% end %>
  </div>

  <div class="row">
    <div class="col-6 p-0">
      <div class= "voir-plus-card d-flex align-items-baseline gap-2">
      <p class="mb-0"><%=link_to "Voir plus...", lists_path%></p>
      <i class="fa-solid fa-circle-chevron-right"></i>
      </div>
    </div>
  </div>

</div>


<div class="container">

  <div class="row">

    <div class="col-12 text-left mt-3">
      <h3><b>Rappels du jour</b></h3>
    </div>

    <div class="col-12 p-0">
      <div class= "reminder-card-dashboard">
      <p>Récupérer courses</p>
      </div>
    </div>

    <div class="col-12 p-0">
      <div class= "reminder-card-dashboard">
      <p>Dentiste</p>
      </div>
    </div>

    <div class="col-12 p-0">
      <div class= "reminder-card-dashboard">
      <p>Déposer colis</p>
      </div>
    </div>

    <div class="col-12 d-flex flex-column align-items-end p-0">
      <div class="col-6">
        <div class="voir-plus-card d-flex align-items-baseline gap-2 voir-plus-reminders-background">
        <p class="mb-0"><%=link_to "Voir plus..."%></p>
        <i class="fa-solid fa-circle-chevron-right"></i>
        </div>
      </div>
    </div>

  </div>

</div>
<%= render 'dashboards/modal' %>
