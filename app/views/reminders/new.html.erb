<br>
<div class="container align-items-center flex-column d-flex reminder-create">
  <%#<div class="reminder-background">  %>
    <br>
    <h1 class="title-reminder">Créer un nouveau rappel</h1>
    <br>
    <%= simple_form_for(@reminder) do |f| %>

      <%= f.input :description,
      placeholder: "Nom du rappel",
      :label => false,
      input_html: {style: "color: black"}%>
      <%= f.input :end_date, as: :string, :label => "Date",
      input_html: {data: {controller: "flatpickr" } }%>
      <%= f.input :hours, as: :time, :label => "Heure",
      input_html: {data: {controller: "timepicker" } } do %>
        <%= time_field_tag "hours", "", class: "w-100 px-3", style:"height:40px" %>
      <% end %>
      <div class="d-flex justify-content-center">
        <%= f.submit "Créer rappel", class: "btn validate-button w-50"%>
      </div>
    </div>
    <% end %>
 <%# </div>   %>
</div>
