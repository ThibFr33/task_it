
<%= turbo_stream_from "reminder-index" %>
<div id="loader"></div>

<div class="d-flex align-items-baseline me-2">
  <div class="col-7 text-left my-title">
    <h2>Mes rappels</h2>
  </div>

  <%# input pour OCR %>
<%= simple_form_for :ocr, url: ocr_reminders_path, method: :post, html: { multipart: true, data: { controller: "submit-photo"} } do |f| %>
              <%= f.input :temp_photo, as: :file, input_html: { id: "fileInput", capture: "environment", data: {action:"change->submit-photo#submitFormPhoto"}}, wrapper_html: { class: "d-none" } %>
           <label for="fileInput" style="cursor: pointer;">
             <%=image_tag "qr-code.png", alt: "scan", width: "30" %>
           </label>
          <% end %>
    <a class="btn" href="<%= new_reminder_path(@reminder) %>"><i class="fa-solid fa-circle-plus fa-2x"></i></a>
</div>



<div id="reminder-list">
  <%= render "reminders", reminders: @reminders %>
</div>
